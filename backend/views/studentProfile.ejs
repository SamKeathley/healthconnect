<% include partials/header %>

<section>
<div class="opac">
<div class="container">
  <div class="row">
    <div class="nav col-md-4">
      <div class="optionsBox">
        <nav>
          <ul class="nav nav-pills nav-stacked left-menu" id="stacked-menu">
            <div class="guardNav"><a href="#"><div class="navHover">Home</div></a></div>
            <a href="#" data-target="#item1" data-toggle="collapse" data-parent="#stacked-menu" class="guardNav" id="guardDrop"><div class="navHover">Student Profile<span class="caret arrow"></span></div></a>
              <ul class="nav nav-stacked collapse left-submenu" id="item1">
                <li class="subNav"><a href="#"/><div class="navHover">Overview</div></a></li>
