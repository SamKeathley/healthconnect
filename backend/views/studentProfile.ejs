<% include partials/header %>
<section>
<div class="opac">
<div class="container">
  <div class="row">
    <div class="nav col-md-4">
      <nav>
        <ul>
          <div class="studentNav"><a href="#"><div class="navHover">Home</div></a></div>
          <div class="studentNav"><a href="/"><div class="navHover">Student Profile</div></a></div>
          <div class="studentNav studentNavBottom"><a href="#"><div class="navHover">Create New Report</div></a></div>
        </ul>
      </nav>
    </div>
<div class="content-container col-md-5">
  <div class="student-name"><%= name %></div>
  <div></div>
  <div class="student-image"><img src="<%=image%>"/></div>
  <div class="student-report-info">Birthdate: <%= birthdate %></div>
  <div class="student-report-title">Parent/Guardian Contact</div>
  <div class="student-report-info"><span style="font-size: 20px;"><%= guardian %></span>
    <br>
    <br>Phone: <%= guardian_number %>
    <br>Email: <%= guardian_email %></div>
  <div class="student-report-title">Medical History</div>
  <div class="student-report-info"><%= medicalHistory %></div>
  <div class="student-report-title">Allergies</div>
  <div class="student-report-info"><%= allergies %></div>
  <div class="student-report-title">Immunizations</div>
  <div class="student-report-info"><%= immunizations %></div>
  <div class="student-report-title">Reports</div>

  <% for (var i=0, x=reports.length; i<x; i++) { %>
    <p class="report top">Date: <%= reports[i].date %></p>
    <p class="report">Vitals: <%= reports[i].vitals %></p>
    <p class="report">Symptoms: <%= reports[i].symptoms %></p>
    <p class="report">Notes: <%= reports[i].call_notes %></p>
    <p class="report bottom">Treatment Plan: <%= reports[i].treatment_plan %></p>
  <% } %>
  <p><a id="generate-report" href="/createreport/<%=id%>">Create New Report</a></p>
  </div>
</div>
</div>
</div>
</section>

<% include partials/footer %>
